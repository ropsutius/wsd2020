<nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a id ="burger" role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" onclick="dropBurger()">
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
      <span aria-hidden="true"></span>
    </a>
  </div>
  <div id="navMenu" class="navbar-menu">
    <% if (locals.isReporting) { %>
      <div class="navbar-start">
        <div class="navbar-item">
          <div class="buttons">
            <button class="button is-primary" onclick="chooseMorning()">Submit morning Behavior</button>
            <button class="button is-primary" onclick="chooseEvening()">Submit evening behavior</button>
          </div>
        </div>
      </div>
    <% } %>

    <div class="navbar-end">
      <div class="navbar-item">
        <% if (user && user.email) { %>
          <span class="tag is-medium is-warning">Logged in as&nbsp;<strong><%= user.email %></strong></span>
        <% } %>
      </div>
      <div class="navbar-item">
        <div class="buttons">
          <% if (user && user.email) { %>
            <a class="button is-primary" href="/behavior/reporting">Report behavior</a>
            <a class="button is-primary" href="/behavior/summary">See results</a>
            <a class="button is-light" href="/auth/logout">Log out</a>
          <% } else { %>
            <a class="button is-primary" href="/auth/register"><strong>Register</strong></a>
            <a class="button is-light" href="/auth/login">Log in</a>
          <% }  %>
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  const dropBurger = () => {
    const navMenu = document.querySelector("#navMenu");
    const burger = document.querySelector("#burger");

    burger.classList.toggle('is-active');
    navMenu.classList.toggle('is-active');
  }
</script>
