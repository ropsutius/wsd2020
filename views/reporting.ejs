      <input type="radio" id="eat5" value="5" name="eating" <%= eating == 5 ? 'checked' : '' %>>
      <label for="eat5">5</label>
      <%- include('./partials/errors.ejs', { errors: errors, attribute: 'eating'}) %>
    </div>

    <div>
      <label>General mood on a scale of 1-5: </label><br>
      <input type="radio" id="evening_mood1" value="1" name="evening_mood" <%= evening_mood == 1 ? 'checked' : '' %>>
