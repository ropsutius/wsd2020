      <input type="radio" id="evening_mood3" value="3" name="evening_mood" <%= evening_mood == 3 ? 'checked' : '' %>>
      <label for="evening_mood3">3</label>
      <input type="radio" id="evening_mood4" value="4" name="evening_mood" <%= evening_mood == 4 ? 'checked' : '' %>>
      <label for="evening_mood4">4</label>
      <input type="radio" id="evening_mood5" value="5" name="evening_mood" <%= evening_mood == 5 ? 'checked' : '' %>>
      <label for="evening_mood5">5</label>
      <%- include('./partials/errors.ejs', { errors: errors, attribute: 'evening_mood'}) %>
    </div>

    <div>
      <input type="submit" value="Submit evening behavior">
    </div>
  </form>
</div>

<button id="choose_morning" onclick="chooseMorning()">Choose Morning</button>

<button id="choose_evening" onclick="chooseEvening()">Choose Evening</button>

<%- include('./partials/footer.ejs') %>
