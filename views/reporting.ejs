      <%- include('./partials/errors.ejs', { errors: errors, attribute: 'time_sport'}) %>
    </div>

    <div>
      <label>Time spent studying: </label>
      <input type="number" name="time_study" value="<%= time_study %>">
      <%- include('./partials/errors.ejs', { errors: errors, attribute: 'time_study'}) %>
    </div>

    <div>
      <label>Regularity and quality of eating on a scale of 1-5: </label><br>
      <input type="radio" id="eat1" value="1" name="eating" <%= eating == 1 ? 'checked' : '' %>>
